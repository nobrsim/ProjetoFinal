pipeline {
    agent any

    stages {
        stage('Clone repo') {
            steps {
                git url: "https://github.com/talysoncardoso/ProjetoFinal.git", branch: 'main'
            }
        }
        stage('Build EC2') {
            steps {
                sh "chmod +x pipeline_ami/deploy.sh"
                sh "pipeline_ami/deploy.sh"
            }
        }
        stage('Test kubernetes e docker') {
            steps {
                sh "chmod +x pipeline_ami/test.sh"
                sh "pipeline_ami/test.sh"
            }
        }
        stage('Creating ami') {
            steps {
                sh "chmod +x pipeline_ami/package-ami.sh"
                sh "pipeline_ami/package-ami.sh"
            }
        }
        stage('Destroy') {
            steps {
                sh "chmod +x pipeline_ami/destroy.sh"
                sh "pipeline_ami/destroy.sh"
            }
        }
    }
}